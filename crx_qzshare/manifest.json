{
	"manifest_version": 2,
	"name": "QQ空间分享助手",
	"version": "1.0",
	"description": "用来一键分享到QQ空间",
	"author": "grdaimap",
	"icons":
	{
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": 
	{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": 
	[
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content-script.js"]
		}
	],
	"web_accessible_resources": 
	[
		"inject.js"
	],
	"permissions":
	[
		"contextMenus", 
		"tabs",  
		"notifications",  
		"webRequest",  
		"webRequestBlocking",  
		"storage",  
		"http://*/*",
		"https://*/*"
	],
	"homepage_url": "https://grdaimap.github.io/"
}